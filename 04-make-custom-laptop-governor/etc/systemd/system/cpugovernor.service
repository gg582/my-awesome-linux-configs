[Unit]
Description=Set CPU governor to conservative
After=multi-user.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'for cpu in /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor; do echo laputil > $cpu; done;echo 1 | sudo tee /sys/devices/system/cpu/cpufreq/boost'

[Install]
WantedBy=multi-user.target
